<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>{{t 'name'}}</th>
      <th>{{t 'actions'}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each record}}
      <tr>
        <td>{{id}}</td>
        <td>{{name}}</td>
        <td>
        {{#link-to 'certification.downloadAsPDF' userId id class="btn btn-default"}}
          {{t 'download.as.pdf'}}
        {{/link-to}}
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="3">{{t 'certification.user.empty'}}</td>
      </tr>
    {{/each}}
  </tbody>
  <tfoot></tfoot>
</table>